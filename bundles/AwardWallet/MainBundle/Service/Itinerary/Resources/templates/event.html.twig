{% extends "@Module/Itinerary/Resources/templates/itinerary.html.twig" %}

{% block title %}
    {% if edit|default(false) %}
        {{ 'event.edit'|trans([], 'trips') }}
    {% else %}
        {{ 'event.add'|trans([], 'trips') }}
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% if not webpack|default(false) %}
        <script>
            require(['jquery-boot', 'pages/itinerary/form'], function ($, ItineraryForm) {
                $(document).ready(function() {
                    new ItineraryForm({
                        formContainer  : '#{{ form.vars.full_name }}',
                        autocompleteField: 'address'
                    }).init();
                })
            })
        </script>
    {% else %}
         <script>
            window.eventFormContainer = '#{{ form.vars.full_name }}';
        </script>
        {{ encore_entry_script_tags('event', null, '_default', {'defer': true}) }}
    {% endif %}
{% endblock %}

{% block main_form %}
    {{- form_start(form, {
        'attr': {
            'data-files': files|json_encode,
            'class': 'main-form',
            'novalidate': 'true',
            'id': form.vars.full_name
        }
    }) -}}
    {{- form_widget(form, {'noSubmit': true}) -}}
    {{ block('submit_button') }}
    {{- form_end(form) -}}
{% endblock %}
