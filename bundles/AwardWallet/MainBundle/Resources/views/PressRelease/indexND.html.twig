{% set MOBILE_NAV = true %}
{% set MAIN_BODY_CLASSES = {
    'manual-hidden': true,
    'responsive': true
}|merge(MAIN_BODY_CLASSES|default({})) %}
{% extends app.user is not null ? "@AwardWalletMain/Layout/common.html.twig" : "@AwardWalletMain/Layout/not_logged.html.twig" %}

{% block title %}{{ 'press-media-awardwallet'|trans|desc("Press & Media | AwardWallet") }}{% endblock %}

{% block meta %}
    {{ parent() }}
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, viewport-fit=cover">
    <meta name="description" content="{{ 'know-more-latest-news'|trans|desc("Learn more about the latest AwardWallet news.") }}">
{% endblock %}

{% block mainContent %}

    <div class="main-blk">
        <h1>{{ 'press-and-media'|trans|desc("Press & Media") }}</h1>

        {% set lastMonth = pressReleases[0].date|patternDatetime('LLLL, y', app.request.locale) %}

        <div class="main-blk-content">
            <div class="press-releases-list">

                <div class="title-note">
                    <h3>{{ lastMonth }}</h3>
                </div>

                {%- for pressRelease in pressReleases -%}

                    {%- set thisMonth = pressRelease.date|patternDatetime('LLLL, y', app.request.locale) -%}

                    {%- if thisMonth != lastMonth -%}
                        {%- set lastMonth = thisMonth -%}
                        <div class="title-note">
                            <h3>{{ lastMonth }}</h3>
                        </div>
                    {% endif %}

                    <div class="date-blk">
                        <div class="date-blk-item">
                            {% if not pressRelease.visible %}
                                <b>[HIDDEN]</b>
                            {% endif %}
                            {{ pressRelease.date|patternDatetime('EEEE, LLLL d, y', app.request.locale) }}
                        </div>
                    </div>

                    <div class="press-releases-blk">

                        <a href="{{ path('aw_pressrelease_view', {'pressReleaseId': pressRelease.id}) }}"
                           class="title">{{ pressRelease.title }}</a>

                        <p>{{ pressRelease.description }}</p>
                        <a href="{{ path('aw_pressrelease_view', {'pressReleaseId': pressRelease.id}) }}"
                           class="btn-blue">
                            Read more
                            <i class="icon-double-arrow-right-white"></i>
                        </a>
                    </div>
                {% endfor %}

            </div>
        </div>
    </div>
{% endblock %}

