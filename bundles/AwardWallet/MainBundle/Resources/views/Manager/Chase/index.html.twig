{% extends "@AwardWalletMain/Manager/layout.html.twig" %}
{% set title = 'Chase code fishing' %}
{% block content %}
    <div style="font-weight: bold; padding-bottom: 10px;">
        {% for message in messages %}
            <div>{{ message|raw }}</div>
        {% endfor %}
    </div>

    <form method="post">
        <label for="bait">account id:</label>
        <input type="text" name="accountId" id="accountId" value=""/>
        <div style="padding-bottom: 10px;">Enter 'all' for all accounts, or leave empty to disable fishing</div>
        <input type="submit" value="Set"/>
    </form>
{% endblock %}