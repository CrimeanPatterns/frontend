{% extends '@AwardWalletMain/Manager/layout.html.twig' %}
{% set title = "RA Request" %}
{% set contentTitle = "" %}

{% block content %}
    <style>
        table {
            border: 1px solid #C7C4BF;
            border-spacing: 0;
            border-collapse: collapse;
        }
        td, th {
            border: 1px solid #C7C4BF;
            text-align: left;
            padding: 3px;
        }
        tr.odd {
            background-color: #f5f5f5;
        }
    </style>
    {% if responseBody is defined %}
        <pre>
            {{ responseBody }}
        </pre>
    {% endif %}
    <form name="form" method="POST">
        <table>
            <tr>
                <td><label for="cluster">Cluster</label></td>
                <td>
                    <select name="cluster" id="cluster" style="width: 100%">
                        <option value="juicymiles"
                                {% if request.cluster is defined and request.cluster=='juicymiles' %}selected="selected"{% endif %}>
                            juicymiles
                        </option>
                        <option value="ra-awardwallet"
                                {% if request.cluster is defined and request.cluster=='ra-awardwallet' %}selected="selected"{% endif %}>
                            ra-awardwallet
                        </option>
                    </select>
                </td>
            </tr>
            <tr><td><label for="accountKey">Account</label></td><td><input type="text" id="accountKey" name="accountKey" value="{{ request.accountKey is defined ? request.accountKey : ''}}"></td>
            <tr><td><label for="provider">Provider</label></td><td><input type="text" id="provider" name="provider" value="{{ request.provider is defined ? request.provider : 'skywards'}}"></td>
            <tr><td><label for="depCode">DepCode</label></td><td><input type="text" id="depCode" name="depCode" value="{{ request.depCode is defined ? request.depCode : 'LAX'}}"></td>
            <tr><td><label for="arrCode">ArrCode</label></td><td><input type="text" id="arrCode" name="arrCode" value="{{ request.arrCode is defined ? request.arrCode : 'LAS'}}"></td>
            <tr><td><label for="depDate">DepDate</label></td><td><input type="text" id="depDate" name="depDate" value="{{ request.depDate is defined ? request.depDate : 'now' | date('Y-m-d')}}"></td>
            <tr><td><label for="cabin">Cabin</label></td><td><input type="text" id="cabin" name="cabin" value="{{ request.cabin is defined ? request.cabin : 'economy'}}"></td>
            <tr><td><label for="adults">Adults</label></td><td><input type="text" id="adults" name="adults" value="{{ request.adults is defined ? request.adults : '1'}}"></td>
            <tr><td><label for="currency">currency</label></td><td><input type="text" id="currency" name="currency" value="{{ request.currency is defined ? request.currency : 'USD'}}"></td>
            <tr><td><input type="submit"></td><td></td>
        </table>
    </form>
{% endblock %}
