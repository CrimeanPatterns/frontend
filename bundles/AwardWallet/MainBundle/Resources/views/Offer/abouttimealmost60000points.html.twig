{% extends popup is defined and popup ? "@AwardWalletMain/Offer/_offerPopup.html.twig" : "@AwardWalletMain/Offer/standard.html.twig" %}
{% import '@AwardWalletMain/Offer/offerMacros.html.twig' as offerMacros %}
{% import '@AwardWalletMain/TwigMacros/assets.html.twig' as assets %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('offer') }}
    {{ encore_entry_link_tags('offers/abouttimealmost60000points') }}
    {% if popup is not defined %}
        {{ assets.assets_form('css') }}
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        {{ offerMacros.jsOfferYes(_context, ApplyURL, Code, OfferUserID, ApplyURL) }}
        {{ offerMacros.jsOfferNo(_context, Code, OfferUserID, defaultRedirectLocation) }}
    </script>
{% endblock %}

{% block content %}
    <div id="offer_wrap" class="offer-block">
        <div class="about-time">
            <h3>About Time: <br>Almost 60,000 Points <br>on These New Offers</h3>
            <p>Great News! <br>Two of the best personal rewards credit cards <br><a onclick="offerYes(false); return false;" href="#">have raised their sign-up offers</a>.</p>
            <p>This is a rare chance to get your hands on some <br> of the most valuable rewards points available! <br>Learn more about these <a onclick="offerYes(false); return false;" href="#">hot new offers</a> <br>and <a onclick="offerYes(false); return false;" href="#">dive into this post</a> to learn how you can <br>redeem these points for international <br>or domestic flights, hotels, cruises, and more!</p>
            <a onclick="offerYes(false); return false;" href="#" class="btn-blue-offer">Learn More</a>
            <a onclick="offerYes(false); return false;" href="#" class="thumb"></a>
        </div>
        {{ offerMacros.offerButtons(_context) }}
    </div>
{% endblock %}
