{% extends "@AwardWalletMain/Layout/business_default.html.twig" %}

{% block popup %}
    {{ parent() }}
    {% if app.user.business.businessInfo.isBlocked() %}
        <div id="insufficient_balance_popup" style="display: none;">
            <p>{{ 'insufficient-balance.popup.text1'|trans|desc('You have insufficient balance on your account. Please add funds in order to continue using the business interface.') }}</p>
        </div>
    {% endif %}
{% endblock %}
