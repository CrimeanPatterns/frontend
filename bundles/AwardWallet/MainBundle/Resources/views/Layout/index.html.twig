    {{ canonical_tag() }}
    {{ alternate_tag() }}
    {{ meta_android_alternate() }}

    <title>{% block title %}AwardWallet{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    {% block javascripts %}{% endblock %}

    {% include '@AwardWalletMain/Layout/vendor_head.html.twig' %}
</head>
<body {{ environmentMacros.globalDataAttr(_context) }} class="{% apply spaceless %}{% block body_class %}{% endblock %}{% endapply %}" {% block body_attr %}{% endblock %}>
    {% block body %}{% endblock %}
</body>
</html>
