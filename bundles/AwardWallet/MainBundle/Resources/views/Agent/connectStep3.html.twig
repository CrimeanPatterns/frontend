{% extends is_granted('SITE_BUSINESS_AREA') ? "@AwardWalletMain/Layout/business_default.html.twig" : "@AwardWalletMain/Layout/edit_connections.html.twig" %}
{% form_theme form with ['@AwardWalletMain/FormTheme/fields.html.twig'] %}

{% block header_metatags %}
    {% include '@AwardWalletMain/Utility/scalableViewport.html.twig' %}
{% endblock %}

{% block content %}
    <div class="add-account">
        <div class="main-blk">
            <h1>{{ 'agents.connect.step1.header'|trans|desc('Add a new connection') }}</h1>
            {{ form_start(form, {'attr': {'class': 'main-form'}, 'action': path('aw_agent_invite')}) }}
            <div class="main-blk-content">
                <div class="warning-message">
                    <i class="icon-warning-b"></i>

                    <p class="big">{{ 'agents.connect.dont-register.message'|trans({'%email%': email |htmlencode})|desc('The user that you specified <span class="silver">(%email%)</span> does not appear to be registered on AwardWallet')|raw }}</p>
                </div>
            </div>
            <div class="row-submit">
                <button type="submit" class="btn-blue f-right">{{ 'agents.connect.invite.btn'|trans|desc('Invite to AwardWallet') }}</button>
                <button type="button" onclick="location.href='{{ path('aw_create_connection') }}';" class="btn-silver f-right">{{ 'agents.connect.search-again.btn'|trans|desc('Search again') }}</button>
            </div>
            {{ form_end(form) }}
        </div>
        {{ include('@AwardWalletMain/Agent/_faq.html.twig') }}
    </div>
{% endblock %}