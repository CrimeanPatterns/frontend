{% block image_row %}
    <div class="row-caption">
        <span class="number">1.</span>
        <p>
            {{ 'two-fact.qr.help'|trans({
                '%andrLink%': 'https://play.google.com/store/apps/details?id=com.google.android.apps.authenticator2&hl=en',
                '%iosLink%': 'https://itunes.apple.com/us/app/google-authenticator/id388497605?mt=8',
                '%wpLink%': 'http://www.windowsphone.com/en-US/apps/021dd79f-0598-e011-986b-78e7d1fa76f8',
            })
            |desc("Please scan the following QR code using Google Authenticator app, which can be downloaded for <a href=\"%andrLink%\" target=\"_blank\">Android</a>, <a href=\"%iosLink%\" target=\"_blank\">iOS</a> and <a href=\"%wpLink%\" target=\"_blank\">Windows Phone</a> devices")|raw
            }}
        </p>
    </div>
    <div class="row{% if not valid %} error{% endif %}{% if col2 is defined %} col-2{% endif %}">
        <div class="row-item">
            <label></label>
            <div class="input">
                <div class="input-item">
                    {{ form_widget(form) }}
                </div>
            </div>
        </div>
        <div class="info">
            <div class="info-icon"></div>
            <div class="info-description"><p></p></div>
        </div>
    </div>
{% endblock %}

{% block number_row %}
    <div class="row-caption">
        <span class="number">2.</span>
        <p>
            {{ 'two-fact.secretcode.help'|trans|desc("Please enter the code generated by Google Authenticator app")|raw }}
        </p>
    </div>
    <div class="row{% if not valid %} error{% endif %}{% if col2 is defined %} col-2{% endif %}">
        <div class="row-item">
            {{ form_label(form) }}
            <div class="input">
                <div class="input-item">
                    {{ form_widget(form) }}
                </div>
            </div>
        </div>
        <div class="info">
            <div class="info-icon"></div>
            <div class="info-description"><p></p></div>
        </div>
        {{ form_errors(form) }}
    </div>
{% endblock %}

{% block image_widget %}
    <img {% if value is defined %}src="{{ value }}" {% endif %}{{ block('widget_attributes') }} />
{% endblock %}