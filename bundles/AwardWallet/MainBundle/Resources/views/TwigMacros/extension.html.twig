{% macro load() %}
<!-- browser ext params -->
<input type="hidden" id="extCommand" value="init"/>
<input type="hidden" id="extParams" value=""/>
<input type="button" id="extButton" style="display: none;"/>
<input type="button" id="extListenButton" style="display: none;" onclick="if(typeof(browserExt) == 'undefined') setTimeout(document.getElementById('extListenButton').onclick, 100); else browserExt.receiveCommand()"/>
<input type="hidden" id="extBrowserKey" value="deprecated"/> {# not used, we do not store account data in browser anymore, can't set to empty string, because extension will not start #}
<input type="hidden" id="extUserId" value="{{ app.user.userid }}"/>
{% endmacro %}

{% macro autologin_popup() %}
    <dialog id="autologin-popup" data-auto-open="false" data-modal="true" data-width="500">
        <p>{{ "account.list.autologin.status"|trans }}, {{ "please-wait"|trans|lower }}</p>
    </dialog>
{% endmacro %}
