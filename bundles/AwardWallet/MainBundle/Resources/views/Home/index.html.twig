                            {{ macro.footer_link('menu.media'|trans({}, 'menu'), urlLocale('aw_pressrelease_index_locale', {'_locale': app.request.locale})) }}
                            {{ macro.footer_link('menu.credit-card-offers'|trans({}, 'menu'), 'https://awardwallet.com/blog/credit-cards/') }}
                            {{ macro.footer_link('menu.promos'|trans({}, 'menu'), urlLocale('aw_promotions_index_locale', {'_locale': app.request.locale})) }}
