        <script type="text/ng-template" id="/register">
            {% include "@AwardWalletMain/Users/register.html.twig" with refs %}
        </script>
        <script type="text/ng-template" id="/restore">
            {% include "@AwardWalletMain/Users/restore.html.twig" with refs %}
