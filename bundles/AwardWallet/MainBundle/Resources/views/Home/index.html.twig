                    </div>
                    <div class="{{ bem('page-landing', 'section-description-app-button') }}">
                        {% if is_ios() %}
                            {{ macro.platform_appstore_button('button', ['align_left', 'wide', 'arrow']) }}
                        {% elseif is_android() %}
                            {{ macro.platform_google_play_button('button', ['align_left', 'wide', 'arrow']) }}
                        {% endif %}
                    </div>
                </div>
