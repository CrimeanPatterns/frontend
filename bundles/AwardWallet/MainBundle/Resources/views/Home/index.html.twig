                        <div class="{{ bem('logo', null, ['small']) }}">
                            <picture class="{{ bem('logo', 'light') }}">
                                <img {{ image_src('logo/logo.svg') }} width="178" height="21" alt="logo">
                            </picture>
                            <picture class="{{ bem('logo', 'dark') }}">
