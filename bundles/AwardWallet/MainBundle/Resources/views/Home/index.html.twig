{% extends "@AwardWalletMain/Layout/index.html.twig" %}
{% import "@AwardWalletMain/TwigMacros/recaptcha.html.twig" as recaptcha %}
{% import "@AwardWalletMain/TwigMacros/environment.html.twig" as env %}
{% import _self as macro %}

{% block meta %}
    {{ parent() }}
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1, maximum-scale=5, viewport-fit=cover">
    <meta name="keywords" content="{{ 'meta.keywords'|trans|desc('Incentive reward center, Marriott reward, cheap airfare, reward incentive program, American Express rewards, trip reward, air miles reward program, frequent flyer miles, track award program balances, air mile reward, award software, award program, delta sky miles, reward program reward network') }}">
    <meta name="description" content="{{ 'meta.description'|trans|desc('AwardWallet helps you track frequent flyer miles and hotel points as well as book reward tickets') }}">
    <meta name="google-site-verification" content="rtczCsWSE3xSyZ3TiyI6quRz2fgkTgAEgCVJvQVn0R0" />
    <base href="{{ app.request.pathInfo | raw }}">
{% endblock %}

{% block title %}
    {% if app.request.get('_route') in ['aw_login', 'aw_login_locale'] %}
        {{ 'meta.title.login'|trans }}
    {% elseif app.request.get('_route') in ['aw_register', 'aw_register_locale'] %}
        {{ 'meta.title.register'|trans }}
    {% else %}
        {{ 'meta.title'|trans }}
    {% endif %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('page-landing') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('trans/' ~ app.request.locale, null, '_default', {'defer': true}) }}
    {{ encore_entry_script_tags('page-landing', null, '_default', {'defer': true}) }}
{% endblock %}

{% block body_class %}
    {{ parent() }} {{ bem('page-landing') }}
{% endblock %}

{% block body_attr %}
    {% if invite is defined and invite %}
        {% set invitee = invite.familyMember ? invite.familyMember : invite.inviteeid %}

        {{ env.dataAttr({
            'invite-email': invite.email ? invite.email : '',
            'invite-fn': invitee ? invitee.firstname : '',
            'invite-ln': invitee ? invitee.lastname : '',
            'invite-code': invite.code,
        }) }}
    {% endif %}
{% endblock %}

{% block body %}
    {% include '@AwardWalletMain/Layout/vendor_body-top.html.twig' %}
    <div class="{{ bem('page-landing', 'container') }}">
        <header class="{{ bem('page-landing', 'sticky-header') }}">
            <div class="{{ bem('page-landing', 'header') }} {{ bem('page-landing', 'section-wrapper') }}">
                <div class="{{ bem('logo') }} {{ bem('page-landing', 'logo') }}">
                    <a href="{{ urlLocale('aw_home_locale') }}">
                        <picture class="{{ bem('logo', 'light') }}">
                            <img {{ image_src('logo/logo.svg') }} width="150" height="12" alt="logo">
                        </picture>
                        <picture class="{{ bem('logo', 'dark') }}">
                            <img {{ image_src('logo/logo--dark.svg') }} width="150" height="12" alt="logo">
                        </picture>
                    </a>
                </div>
                <div class="{{ bem('page-landing', 'header-buttons') }}">
                    <a href="{{ path('aw_login') }}" ui-sref="login" ui-sref-active="active" class="{{ bem('button', null, ['type_login']) }} ga-landing-top-btn-login">{{ 'log-in.btn'|trans({}, 'landing')|desc('Log In') }}</a>
                    <a href="{{ path('aw_register') }}" ui-sref="register" ui-sref-active="active" class="{{ bem('button') }} ga-landing-top-btn-register">{{ 'sign-up.btn'|trans({}, 'landing')|desc('Sign Up') }}</a>
                </div>
                <div class="{{ bem('page-landing', 'header-platform-buttons') }}">
                    {% if is_ios() %}
                        {{ macro.platform_appstore_button('button', ['type_platform', 'align_left', 'arrow']) }}
                    {% elseif is_android() %}
                        {{ macro.platform_google_play_button('button', ['type_platform', 'align_left', 'arrow']) }}
                    {% else %}
                        {{ macro.platform_appstore_link('button-platform', ['size_medium']) }}
                        {{ macro.platform_google_play_link('button-platform', ['size_medium']) }}
                    {% endif %}
                </div>
            </div>
        </header>

        <main class="{{ bem('page-landing', 'main') }}">
            <section class="{{ bem('page-landing', 'section-description') }} {{ bem('page-landing', 'section-wrapper') }}">
                <div class="{{ bem('page-landing', 'section-description-column') }}">
                    <h1 class="{{ bem('page-landing', 'section-description-title') }}">
                        {{ 'aw-desc-title'|trans({
                            '%bold_on%': '<span>',
                            '%bold_off%': '</span>',
                        }, 'landing')|desc('All your %bold_on%Rewards%bold_off% &amp; %bold_on%Travel%bold_off% in One Place')|raw }}
                    </h1>
                    <p class="{{ bem('page-landing', 'section-description-text') }}">
                        {{ 'aw-desc-text'|trans({}, 'landing')|desc('AwardWallet tracks your credit cards, loyalty points, and travel plans in a convenient, secure account you can access from anywhere.') }}
                    </p>
                    <div class="{{ bem('page-landing', 'section-description-buttons') }}">
                        <a href="{{ path('aw_register') }}" ui-sref="register" ui-sref-active="active" class="{{ bem('button') }} ga-landing-head-btn-register">{{ 'sign-up-free.btn'|trans({}, 'landing')|desc('Sign up for free') }}</a>
                        <span class="{{ bem('page-landing', 'section-platform-buttons') }}">
                            {% if is_ios() %}
                                {{ macro.platform_appstore_link('button-platform', ['size_medium']) }}
                            {% elseif is_android() %}
                                {{ macro.platform_google_play_link('button-platform', ['size_medium']) }}
                            {% else %}
                                {{ macro.platform_appstore_link('button-platform', ['size_medium']) }}
