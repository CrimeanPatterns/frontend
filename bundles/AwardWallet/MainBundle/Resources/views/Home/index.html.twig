                        </div>
                        <div class="{{ bem('page-landing', 'footer-links-list') }}">
                            {{ macro.footer_link('menu.supported'|trans({}, 'menu'), urlLocale('aw_supported_locale', {'_locale': app.request.locale})) }}
                            {{ macro.footer_link('menu.faqs'|trans({}, 'menu'), urlLocale('aw_faq_index_locale', {'_locale': app.request.locale})) }}
                            {{ macro.footer_link('APIs', urlLocale('aw_api_doc_locale', {'_locale': app.request.locale})) }}
