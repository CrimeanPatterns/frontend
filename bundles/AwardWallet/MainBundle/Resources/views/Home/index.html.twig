                            width="691"
                            height="595"
                            alt="phone">
                    </picture>
                    <picture class="{{ bem('page-landing', 'section-description-img-dark') }}">
                        <source
                            {{ image_srcset('page-landing/phone--dark@{450,691,900,1382}w.png') }}
                            sizes="(max-width: 440px) 75vw, (max-width: 1023px) 47vw, 691px"
                            width="691"
                            height="595"
                            media="(prefers-color-scheme: dark)">
                        <img
                            loading="lazy"
                            {{ image_src('page-landing/phone@{450,691,900,1381}w.png') }}
