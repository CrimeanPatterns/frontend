                    </div>
                </div>
                <div class="{{ bem('page-landing', 'section-miles-body') }}">
                    {{ macro.provider_kind_item('credit-card', 'track.group.card'|trans, constant('PROVIDER_KIND_CREDITCARD')) }}
                    {{ macro.provider_kind_item('train', 'track.group.train'|trans, constant('PROVIDER_KIND_TRAIN')) }}
                    {{ macro.provider_kind_item('airline', 'track.group.airline'|trans, constant('PROVIDER_KIND_AIRLINE')) }}
                    {{ macro.provider_kind_item('cruise', 'track.group.cruise'|trans, constant('PROVIDER_KIND_CRUISES')) }}
                    {{ macro.provider_kind_item('hotel', 'track.group.hotel'|trans, constant('PROVIDER_KIND_HOTEL')) }}
                    {{ macro.provider_kind_item('dining', 'track.group.dining'|trans, constant('PROVIDER_KIND_DINING')) }}
                    {{ macro.provider_kind_item('car', 'track.group.rent'|trans, constant('PROVIDER_KIND_CAR_RENTAL')) }}
                    {{ macro.provider_kind_item('shopping', 'track.group.shop'|trans, constant('PROVIDER_KIND_SHOPPING')) }}
                    {{ macro.provider_kind_item('parking', 'track.group.parking'|trans, constant('PROVIDER_KIND_PARKING')) }}
                    {{ macro.provider_kind_item('surveys', 'track.group.survey'|trans, constant('PROVIDER_KIND_SURVEY')) }}
                </div>
            </section>

            <div class="{{ bem('page-landing', 'section-mobile-features-wrapper') }}">
                <section class="{{ bem('page-landing', 'section-mobile-features') }} {{ bem('page-landing', 'section-wrapper') }}">
                    <div class="{{ bem('page-landing', 'section-mobile-features-list') }}">
                        <div class="{{ bem('page-landing', 'mobile-feature') }} {{ bem('page-landing', 'mobile-feature-dummy') }}"></div>
                        {{ macro.mobile_feature(
                            'track.group.card'|trans,
                            'mobile-feature-credit-card'|trans({}, 'landing')|desc('See your points balances, card benefits, and available credits so you never miss another perk.'),
                            'mobile-credit-card'
                        ) }}
                        {{ macro.mobile_feature(
                            'track.group.airline'|trans,
                            'mobile-feature-airlines'|trans({}, 'landing')|desc('Track your airline miles, elite status, upgrade certificates, and travel vouchers.'),
                            'mobile-airlines'
                        ) }}
                        {{ macro.mobile_feature(
                            'track.group.hotel'|trans,
                            'mobile-feature-hotels'|trans({}, 'landing')|desc('Track your hotel points, elite status, free-night certificates, room and suite upgrades, and more.'),
                            'mobile-hotels'
                        ) }}
                        {{ macro.mobile_feature(
                            'mobile-feature-spend-analysis.header'|trans({}, 'landing')|desc('Maximize Your Points'),
                            'mobile-feature-spend-analysis'|trans({}, 'landing')|desc('AwardWallet shows you how many points you earned for every transaction—and highlights when you should use a different credit card to earn more.'),
                            'mobile-spend-analysis'
                        ) }}
                        {{ macro.mobile_feature(
                            'mobile-feature-expiration-reminders.header'|trans({}, 'landing')|desc('Expiration Reminders'),
                            'mobile-feature-expiration-reminders'|trans({}, 'landing')|desc('Get push notifications and email reminders whenever your points or benefits are at risk of expiring.'),
                            'mobile-reminders'
                        ) }}
                        {{ macro.mobile_feature(
                            'mobile-feature-account-details.header'|trans({}, 'landing')|desc('See Account Details'),
                            'mobile-feature-account-details'|trans({}, 'landing')|desc('Pull up your loyalty card to scan at checkout or log in to your account with a tap of the finger.'),
                            'mobile-account-details'
                        ) }}
                        <div class="{{ bem('page-landing', 'mobile-feature') }} {{ bem('page-landing', 'mobile-feature-dummy') }}"></div>
                    </div>
                </section>
            </div>

            <section class="{{ bem('page-landing', 'section-itinerary-organization') }} {{ bem('page-landing', 'section-wrapper') }}">
                <div class="{{ bem('page-landing', 'section-itinerary-organization-header') }}">
                    <h2 class="{{ bem('page-landing', 'section-header') }}">
                        {{ 'aw-itinerary-organization'|trans({
                            '%bold_on%': '<span>',
                            '%bold_off%': '</span>',
                        }, 'landing')|desc('%bold_on%Travel Better%bold_off% with Effortless %bold_on%Itinerary Organization%bold_off%')|raw }}
                    </h2>
                </div>
                <div class="{{ bem('page-landing', 'section-itinerary-organization-body') }}">
                    {{ macro.step(
                        1,
                        'itinerary-organization.1-step'|trans({}, 'landing')|desc('Connect your email or forward your travel plans.')
                    ) }}

                    <div class="{{ bem('page-landing', 'border-step') }}"></div>

                    {{ macro.step(
                        2,
                        'itinerary-organization.2-step'|trans({}, 'landing')|desc('No matter where you book, you’ll find the details imported into an easy-to-read, master itinerary.')
                    ) }}

                    <div class="{{ bem('page-landing', 'border-step') }}"></div>

                    {{ macro.step(
                        3,
                        'itinerary-organization.3-step'|trans({}, 'landing')|desc('Get real-time alerts to your mobile device so you’re always on top of what’s next.')
                    ) }}
                </div>
            </section>

            <section class="{{ bem('page-landing', 'section-security') }} {{ bem('page-landing', 'section-wrapper') }}">
                <img class="{{ bem('page-landing', 'shield-icon') }}" width="100" height="100" loading="lazy" {{ image_src('page-landing/shield.svg') }} alt="shield">
                <h2 class="{{ bem('page-landing', 'section-header') }} {{ bem('page-landing', 'section-security-header') }}">
                    {{ 'bank-level-encryption'|trans({}, 'landing')|desc('Bank Level Encryption') }}
                </h2>

                <div class="{{ bem('page-landing', 'security-checkboxes-list') }}">
                    <div class="{{ bem('page-landing', 'security-checkboxes-wrapper') }}">
                        <div class="{{ bem('page-landing', 'security-checkbox-item') }}">
                            <picture class="{{ bem('page-landing', 'security-checkbox-img-light') }}">
                                <img loading="lazy" {{ image_src('page-landing/checkbox.svg') }} width="28" height="28" alt="checkbox">
                            </picture>
                            <picture class="{{ bem('page-landing', 'security-checkbox-img-dark') }}">
                                <img loading="lazy" {{ image_src('page-landing/checkbox--dark.svg') }} width="28" height="28" alt="checkbox">
                            </picture>
                            <p>{{ 'multi-factor-authentication'|trans({}, 'landing')|desc('Multi-Factor authentication') }}</p>
                        </div>
                        <div class="{{ bem('page-landing', 'security-checkbox-item') }}">
                            <picture class="{{ bem('page-landing', 'security-checkbox-img-light') }}">
                                <img loading="lazy" {{ image_src('page-landing/checkbox.svg') }} width="28" height="28" alt="checkbox">
                            </picture>
                            <picture class="{{ bem('page-landing', 'security-checkbox-img-dark') }}">
                                <img loading="lazy" {{ image_src('page-landing/checkbox--dark.svg') }} width="28" height="28" alt="checkbox">
                            </picture>
                            <p>{{ 'never-sell-your-data'|trans({}, 'landing')|desc('We will never sell your data') }}</p>
                        </div>
                    </div>
                </div>

                <a href="{{ path('aw_register') }}" ui-sref="register" ui-sref-active="active" class="{{ bem('button') }} {{ bem('page-landing', 'section-security-buttons') }} ga-landing-foot-btn-register">{{ 'sign-up-free.btn'|trans({}, 'landing')|desc('Sign up for free') }}</a>
                <div class="{{ bem('page-landing', 'section-security-app-button') }}">
                    {% if is_ios() %}
                        {{ macro.platform_appstore_button('button', ['align_left', 'wide', 'arrow']) }}
                    {% elseif is_android() %}
                        {{ macro.platform_google_play_button('button', ['align_left', 'wide', 'arrow']) }}
                    {% endif %}
                </div>
            </section>
        </main>

        <div class="{{ bem('page-landing', 'footer-wrapper') }}">
            <footer class="{{ bem('page-landing', 'footer') }} {{ bem('page-landing', 'section-wrapper') }}">
                <div class="{{ bem('page-landing', 'footer-list') }}">
                    <div class="{{ bem('page-landing', 'footer-links') }}">
                        <div class="{{ bem('page-landing', 'footer-links-list') }}">
                            {{ macro.footer_link('menu.privacy-notice'|trans({}, 'menu'), urlLocale('aw_page_index_locale', {'page': 'privacy', '_locale': app.request.locale})) }}
