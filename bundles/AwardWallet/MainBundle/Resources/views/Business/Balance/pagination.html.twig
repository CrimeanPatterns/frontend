{% if pageCount > 1 %}
<ul class="pagination">
    {% if first is defined and current != first %}
        <li class="first">
            <a href="{{ path(route, query|merge({(page_name): first})) }}">&lt;&lt;</a>
        </li>
    {% endif %}

    {% if previous is defined %}
        <li class="previous">
            <a href="{{ path(route, query|merge({(page_name): previous})) }}">&lt;</a>
        </li>
    {% endif %}

    {% for page in pagesInRange %}
        {% if page != current %}
            <li>
                <a href="{{ path(route, query|merge({(page_name): page})) }}">{{ page }}</a>
            </li>
        {% else %}
            <li class="active"><a href="{{ path(route, query|merge({(page_name): page})) }}">{{ page }}</a></li>
        {% endif %}

    {% endfor %}

    {% if next is defined %}
        <li class="next">
            <a href="{{ path(route, query|merge({(page_name): next})) }}">&gt;</a>
        </li>
    {% endif %}

    {% if last is defined and current != last %}
        <li class="last">
            <a href="{{ path(route, query|merge({(page_name): last})) }}">&gt;&gt;</a>
        </li>
    {% endif %}
</ul>
{% endif %}
