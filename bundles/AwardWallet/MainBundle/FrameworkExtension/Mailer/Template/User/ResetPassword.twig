{% extends '@MailTemplate/Layout/base.twig' %}
{% trans_default_domain "email" %}

{% block subject %}{% apply spaceless %}{% autoescape false %}
    {{ 'reset-password.subject'|trans({}, 'email', lang)|desc('Reset password to AwardWallet.com') }}
{% endautoescape %}{% endapply %}{% endblock subject %}

{% block content %}
    {% import '@MailTemplate/CommonMacro.twig' as commonMacro %}

    {{ commonMacro.hello(null, _context) }}

    <b style="color: #3d424d;font-size: 16px;line-height: 24px;">
        {% set selection = commonMacro.span('$$')|split('$$') %}
        {{ 'welcome.your_login'|trans({
            '%login%': user.username|htmlencode,
            '%span_on%': selection[0],
            '%span_off%': selection[1]
        }, 'email', lang)|raw }}
    </b>

    {% set link = baseUrl ~ path('aw_profile_change_password_feedback', {id: user.userid, code: user.resetpasswordcode}) %}
    {% set link_styled = commonMacro.link(link, link, {
        'font-size': '15px',
        'margin-top': '5px'
    }) %}
    {% set text = 'reset-password.link-below'|trans({}, 'email', lang)|desc('Click on the link below to reset password:') %}

    {{ commonMacro.smallWarning(
        text ~ "<br>" ~ link_styled,
        _context, {escape: false}, {}, {
            'line-height': '22px',
            'margin': '10px 0 20px'
        }, {
            'padding-top': '10px',
        }
    ) }}

    {{ commonMacro.paragraph(
        'reset-password.you-requested-password'|trans({
            '%bold_on%': '<b>',
            '%bold_off%': '</b>'
        }, 'email', lang)|desc('You got this email because you requested your password to be reset from %bold_on%AwardWallet%bold_off%'),
        _context, {escape: false}
    ) }}
{% endblock content %}

{% block restore_row %}
{% endblock restore_row %}