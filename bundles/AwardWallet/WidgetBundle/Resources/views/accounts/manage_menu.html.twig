<div class="row">
	<div class="heading">
		<i class="icon-silver-arrow-down"></i>
		<h3>{{ 'menu.header.account.manage' | trans({}, 'menu') | desc('Manage My AwardWallet') }}</h3>
	</div>
	<ul class="default-list">
		{% if is_granted('SITE_BUSINESS_AREA') %}
			{% set link = url('aw_profile_overview_business') %}
