{% extends "@AwardWalletWidget/menu.html.twig" %}

{% block item %}
	{% if item is LinkWidget %}
        <li class="header-menu-{{ key }}">
            {{ widget_render(item, {class: 'btn-light-silver'}) }}
            {%- if item.items is defined and item.items|length %}
                <ul class="dropdown-submenu">{{ item.subMenu|raw }}</ul>
            {% endif -%}
        </li>
    {% else %}
        {{ widget_render(item) }}
    {% endif %}
{% endblock %}

{% block menu %}
    <ul class="nav-buttons nav-buttons-mobile">
        {{ block('items') }}
    </ul>
{% endblock %}
